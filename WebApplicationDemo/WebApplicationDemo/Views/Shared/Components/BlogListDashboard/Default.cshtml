@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Başlık </th>
                                <th> Konu </th>
                                <th> Kategori </th>
                                <th> Durum </th>
                                <th> Son Güncelleme </th>
                                <th> Blog Id </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogImg" class="mr-2" alt="image"><a href="/Blog/BlogReadAll/@item.BlogId">@item.BlogTitle</a>
                                    </td>
                                    <td>@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 70).LastIndexOf(" "))..</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>
                                        @if (item.BlogStatus == true)
                                        {
                                            <label class="badge badge-gradient-success">Aktif</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-secondary">Pasif</label>
                                        }
                                    </td>
                                    <td>@item.BlogCreateDate</td>
                                    <td>@item.BlogId</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>