@model UserSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/AdminPanel/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminPanel/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminPanel/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/AdminPanel/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/AdminPanel/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name"></h1>

            </div>
            <h3>Kayıt Ol</h3>
            <p>Yeni bir hesap oluşturun.</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="NameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.NameSurname" placeholder="Ad Soyad">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Mail" class="text-danger"></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for="@Model.Mail">
                </div>
                <div class="form-group">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifre" asp-for="@Model.Password">
                </div>
                <div class="form-group">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Tekrar Şifre" asp-for="@Model.ConfirmPassword">
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i>Kullanıcı şartlarını okudum. Kabul ediyorum.</label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">Giriş Yap</a>
            </form>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/AdminPanel/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminPanel/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/AdminPanel/inspinia-gh-pages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/AdminPanel/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
