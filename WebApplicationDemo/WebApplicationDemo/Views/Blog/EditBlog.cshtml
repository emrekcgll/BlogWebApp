@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog Düzenle</h1>

@using (Html.BeginForm("EditBlog", "Blog", FormMethod.Post))
{
    @Html.Label("Id")
    @Html.TextBoxFor(x => x.BlogId, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    <br />

    @Html.Label("Thumbnail Görsel")
    @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
    <br />

    @Html.Label("Görsel")
    @Html.TextBoxFor(x => x.BlogImg, new { @class = "form-control" })
    <br />

    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.li, new { @class = "form-control" })
    <br />

    @Html.Label("İçerik")
    @Html.TextAreaFor(x => x.BlogContent, 10, 3, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
}

